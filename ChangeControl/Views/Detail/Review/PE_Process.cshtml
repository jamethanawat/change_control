<h1>Review Items</h1>
<br>
<form class="form-horizontal" action="javascript:void(0);" id="review">
    <div class="form-group row">
        <label for="inputAcceptance" class="col-sm-3 col-form-label">Evaluation result</label>

        <div class="col-sm-9 col-form-label">
            <label class="mr-3">
                <input type="radio" data-type="status" data-id="0" name="rd-0" value="1" class="flat-red" checked>
                Acceptance
            </label>
            <label class="mr-3">
                <input type="radio" data-type="status" data-id="0" name="rd-0" value="0" class="flat-red" >
                Not, Acceptance
            </label>
        </div>
        @* <div class="col-sm-7 col-form-label">
            <label>Not Approve reason :</label>
            <input type="text" data-type="desc" data-id="0" name="desc-0" class="form-control" placeholder="200 character limit">
        </div> *@
    </div>
    <div class="form-group row">
        <label for="inputChangeDetails" class="col-sm-3 col-form-label">Change date</label>
        <div class="col-sm-9 col-form-label">
            <input data-toggle="datepicker" data-type="desc" data-id="32" name="desc-32" type="text" class="form-control required"  placeholder="Select Date " autocomplete="off" data-inputmask-alias="datetime" data-inputmask-inputformat="dd-mm-yyyy" data-mask="99-99-9999">
            <div data-toggle="datepicker"></div>
            @* <input type="text" name="desc-32" class="form-control" placeholder="Enter Date "> *@
        </div>
    </div>
    <div class="form-group row">
        <label for="inputChangeDetails" class="col-sm-3 col-form-label">Change details</label>
        <div class="col-sm-9 col-form-label">
            <input type="text"data-type="desc" data-id="1"  name="desc-1" class="form-control required" placeholder="500 character limit" >
        </div>
    </div>
    <div class="form-group row">
        <label for="inputProDesRe" class="col-sm-3 col-form-label">Process design review</label>
        <div class="col-sm-3 col-form-label">
            <label class="mr-3">
                <input type="radio" data-type="status" data-id="2" name="rd-2" value="1" class="flat-red" checked>
                Yes
            </label>
            <label class="mr-3">
                <input type="radio" data-type="status" data-id="2" name="rd-2" value="0" class="flat-red" >
                No, Acceptance
            </label>
        </div>
        <div class="col-sm-6 col-form-label">
            <label>if yes,inform to NS   Due date :</label>
            <textarea data-type="desc" data-id="2" name="desc-2" class="form-control" placeholder=""></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEffeDoc" class="col-sm-3 col-form-label">Effected to Document (Control Plan ,FMEA)</label>
        <div class="col-sm-3 col-form-label">
            <label class="mr-3">
                <input type="radio" data-type="status" data-id="3" name="rd-3" value="1" class="flat-red" checked>
                Yes
            </label>
            <label class="mr-3">
                <input type="radio" data-type="status" data-id="3" name="rd-3" value="0" class="flat-red" >
                No, Acceptance
            </label>
        </div>
        <div class="col-sm-3 col-form-label">
            <label>Control Plan no. :</label>
            <textarea name="desc-29" data-type="desc" data-id="29" class="form-control" placeholder=""></textarea>
        </div>
        <div class="col-sm-3 col-form-label">
            <label>FMEA No. :</label>
            <textarea name="desc-30" data-type="desc" data-id="30" class="form-control" placeholder=""></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputSkills" class="col-sm-3 col-form-label">Due Date</label>
        <div class="col-sm-9 col-form-label">
            <input data-toggle="datepicker" data-type="desc" data-id="31" class="form-control required" placeholder="Select Date " autocomplete="off" name="desc-31" data-inputmask-alias="datetime" data-inputmask-inputformat="dd-mm-yyyy" data-mask="99-99-9999">
            <div data-toggle="datepicker"></div>
            @* <input type="text" name="desc-32" class="form-control" placeholder="Enter Date "> *@
        </div>
    </div>
    <div class="form-group row">
        <label for="inputSkills" class="col-sm-3 col-form-label">Others  (Please specify)</label>
        <div class="col-sm-9 col-form-label">
            <input name="desc-22" data-type="desc" data-id="22" type="text" class="form-control required" placeholder="500 character limit" >
        </div>
    </div>
    <div class="form-group row">
        <label for="inputReqReTrial" class="col-sm-3 col-form-label">Request Trial</label>
        <div class="col-sm-3 col-form-label">
            <label class="mr-3">
                <input type="radio" data-type="status" data-id="24" name="rd-24" value="1" class="flat-red" checked>
                Yes
            </label>
            <label class="mr-3">
                <input type="radio" data-type="status" data-id="24" name="rd-24" value="0" class="flat-red" >
                No, Acceptance
            </label>
        </div>
        <div class="col-sm-6 col-form-label">
            <label>Details :</label>
            <textarea data-type="desc" data-id="24" class="form-control" name="desc-24" placeholder=""></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputSkills" class="col-sm-3 col-form-label">Attach File</label>
        <div class="col-sm-9">
            <input type="file" class="my-pond" name="filepond" />
            @* <input type="file" name="filepond" data-max-files="10" required> *@
        </div>
    </div>
    <br>
    <hr>
    <br>
    <div class="form-group row">
        <div class="col-sm-12">
            <span class="text-danger" id="validate-warning" style="display:none">กรุณาระบุข้อมูล/รายละเอียดให้ครบถ้วน</span>
            <div class="float-right">
                @if(ViewBag.isApprover && ViewBag.isInternal){
                    <a class="btn btn-warning rv-related" id="related_rv" data-toggle="modal" data-target="#related_rv">Related</a>
                    <button type="button" id="reject" class="btn btn-danger">Reject</button>
                }
                <button type="submit" class="btn btn-info">Submit</button>
            </div>
        </div>
    </div>
</form>
